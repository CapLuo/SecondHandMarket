<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/classify_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/classify_title"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/classify_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_line_height"
        android:layout_below="@id/classify_title"
        android:background="@color/light_gray" />

    <ListView
        android:id="@+id/classify_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classify_line"
        android:listSelector="@drawable/item_list_selector" >
    </ListView>

</RelativeLayout>