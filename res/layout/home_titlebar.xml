<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/light_gray"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/home_school_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_title_show_line_top"
        android:layout_marginTop="@dimen/home_title_show_line_top"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/home_title_marginLeft"
            android:text="@string/title_chose_school" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/home_title_marginLeft"
            android:layout_marginRight="@dimen/home_title_marginLeft"
            android:contentDescription="@drawable/arrow_down"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_title_marginTop"
        android:layout_marginLeft="@dimen/home_title_marginLeft"
        android:layout_marginRight="@dimen/home_title_marginLeft"
        android:layout_marginTop="@dimen/home_title_marginTop"
        android:background="@drawable/home_title_layout"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@drawable/search_icon"
            android:src="@drawable/search_icon" />

        <EditText
            android:id="@+id/home_school_seach_edit"
            android:layout_width="@dimen/home_title_exit_length"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/home_title_marginLeft"
            android:background="@android:color/transparent"
            android:hint="@string/title_bar_search" />
    </LinearLayout>

</LinearLayout>