<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height" >

            <ImageView
                android:id="@+id/settings_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/settings_textline_marginleft"
                android:contentDescription="@drawable/back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/settings_title"
                android:textSize="@dimen/title_size" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_textline_height"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/settings_message_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/settings_textline_margintop"
                android:paddingLeft="@dimen/settings_textline_marginleft"
                android:paddingRight="@dimen/settings_textline_marginleft"
                android:paddingTop="@dimen/settings_textline_margintop" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_message_remind"
                    android:textSize="@dimen/settings_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@drawable/ic_list_arrow"
                    android:src="@drawable/ic_list_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_textline_height"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/settings_textline_margintop"
                android:paddingLeft="@dimen/settings_textline_marginleft"
                android:paddingRight="@dimen/settings_textline_marginleft"
                android:paddingTop="@dimen/settings_textline_margintop" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_about"
                    android:textSize="@dimen/settings_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@drawable/ic_list_arrow"
                    android:src="@drawable/ic_list_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_textline_height"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/settings_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/settings_textline_margintop"
                android:paddingLeft="@dimen/settings_textline_marginleft"
                android:paddingRight="@dimen/settings_textline_marginleft"
                android:paddingTop="@dimen/settings_textline_margintop" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_help"
                    android:textSize="@dimen/settings_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@drawable/ic_list_arrow"
                    android:src="@drawable/ic_list_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_textline_height"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/settings_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/settings_textline_margintop"
                android:paddingLeft="@dimen/settings_textline_marginleft"
                android:paddingRight="@dimen/settings_textline_marginleft"
                android:paddingTop="@dimen/settings_textline_margintop" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_feedback"
                    android:textSize="@dimen/settings_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@drawable/ic_list_arrow"
                    android:src="@drawable/ic_list_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_textline_height"
            android:background="@color/light_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_area_high"
            android:background="@color/light_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_textline_height"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/settings_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/settings_textline_margintop"
            android:paddingLeft="@dimen/settings_textline_marginleft"
            android:paddingRight="@dimen/settings_textline_marginleft"
            android:paddingTop="@dimen/settings_textline_margintop" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_clear"
                android:textSize="@dimen/settings_textsize" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_textline_height"
            android:background="@color/light_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/setting_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/settings_textline_margintop"
        android:layout_marginLeft="@dimen/settings_textline_marginleft"
        android:layout_marginRight="@dimen/settings_textline_marginleft"
        android:layout_marginTop="@dimen/settings_textline_margintop"
        android:background="@drawable/sign_out_button"
        android:text="@string/settings_sign_out"
        android:textColor="@color/white"
        android:textSize="@dimen/settings_textsize" />

</RelativeLayout>