<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/classify_margin_top"
    android:paddingLeft="@dimen/classify_margin_left"
    android:paddingRight="@dimen/classify_margin_left"
    android:paddingTop="@dimen/classify_margin_top" >

    <ImageView
        android:id="@+id/item_classify_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/item_classify_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/classify_margin_left" >

        <TextView
            android:id="@+id/item_classify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/classify_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_classify_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/word_gray"
            android:textSize="@dimen/classify_description_size" />
    </LinearLayout>

</LinearLayout>